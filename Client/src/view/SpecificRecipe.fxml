               <children>
                  <Label prefHeight="22.0" prefWidth="300.0" text="Write a comment" textFill="#da0000">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="writeComment" prefHeight="41.0" prefWidth="296.0" />
                  <Button mnemonicParsing="false" onAction="#AddComment" text="POST COMMENT" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="5.0" />
