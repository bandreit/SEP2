               </children>
            </VBox>
            <VBox prefHeight="292.0" prefWidth="313.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="91.0" text="Directions" textFill="#da0000">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <Label fx:id="directions" alignment="TOP_LEFT" prefHeight="272.0" prefWidth="287.0" text="List.." wrapText="true">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="5.0" />
         </padding>
      </HBox>
